<% include ./partials/header  %>
<% include ./partials/navigation %>
<% include ./partials/sidebar %>
    <main class="admin">
        <h1 class="page-title">Edit Album</h1>

        <div class="container-fluid">
            <div class="row">
                <div class="col-xs-12 col-md-6 col-lg-6">
                    <div class="panel">
                        <div class="panel__header">
                            Edit Album: <%= albumData[0].title %>
                        </div>
                        <div class="panel__body">
                            <form action="/admin/albums" method="POST" enctype="application/x-www-form-urlencoded">
                                <input type="hidden" name="album[id]" value="<%= albumData[0].id %>">
                                <div class="form-group">
                                    <label for="album[title]" class="form-label">Album Title</label>
                                    <input type="text" name="album[title]" class="form-control" value="<%= albumData[0].title %>" required="required">
                                </div>
                                <div class="form-group">
                                    <label for="album[description]" class="form-label">Album Description</label>
                                    <textarea name="album[description]" class="form-control form-control--textarea" required="required"><%= albumData[0].description %></textarea>
                                </div>
                                <div class="form-group">
                                    <label for="album[location]" class="form-label">Album Location</label>
                                    <input type="album[location]" name="album[location]" class="form-control" value="<%= albumData[0].location %>" required="required">
                                </div>
                                <div class="form-group">
                                    <button class="btn btn--black">Update</button>
                                    <button class="btn btn-danger">Delete Album</button>
                                </div>
                            </form>
                        </div><!-- end .panel__body -->
                    </div><!-- end .panel -->
                </div><!-- end .col-lg-6 -->
                <div class="col-xs-12 col-md-6 col-lg-6">
                    <div class="panel">
                        <div class="panel__header">
                            Images in Album <%= albumData[0].title %>
                        </div>
                        <div class="panel__body">
                            <div class="table-responsive">
                                <table class="table table-hover">
                                    <thead>
                                        <th>Title</th>
                                        <th>Description</th>
                                        <th>Date Added</th>
                                    </thead>
                                    <tbody>
                                        <% 
                                        
                                        if (albumImages.length > 0) {
                                            albumImages.forEach( (image) => { %>
                                            <tr>
                                                <td>
                                                    <a href="/admin/images/<%= image.id %>">
                                                        <%= image.title %>
                                                    </a>
                                                </td>
                                                <td>
                                                    <a href="/admin/images/<%= image.id %>">
                                                        <%= image.description %>
                                                    </a>
                                                </td>
                                                <td>
                                                    <a href="/admin/images/<%= image.id %>">
                                                        <%= image.date_added %>
                                                    </a>
                                                </td>
                                            </tr>
                                        <% }); 
                                        } else { %>
                                            <tr>
                                                <td class="text-center" colspan="3">No images in album</td>
                                            </tr>
                                        <%
                                        }
                                        %>
                                    </tbody>
                                </table>
                            </div>
                        </div><!-- end .panel__body -->
                    </div><!-- end .panel -->
                </div><!-- end .col-lg-6 -->
            </div><!-- end .row -->
        </div><!-- end .container-fluid -->
    </main>
<% include ./partials/footer  %>