<% include ./partials/header  %>
<% include ./partials/navigation %>
<% include ./partials/sidebar %>
    <main class="admin">
        <h1 class="page-title">Dashboard</h1>

        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12">
                    <div class="panel">
                        <div class="panel__header">
                            Contact Form Submissions
                        </div>
                        <div class="panel__body">
                            <div class="table-responsive">
                                <table class="table table-hover">
                                    <thead>
                                        <th>Full Name</th>
                                        <th>Email</th>
                                        <th>Phone Number</th>
                                        <th>Message</th>
                                        <th>Date</th>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td>Test</td>
                                            <td>Test</td>
                                            <td>Test</td>
                                            <td>Test</td>
                                            <td>Test</td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div><!-- end .table-responsive -->
                        </div><!-- end .panel__body -->
                    </div><!-- end .panel -->
                </div><!-- end .col-lg-12 -->
            </div>

            <div class="row">
                <div class="col-xs-12 col-md-6 col-lg-6">
                    <div class="panel">
                        <div class="panel__header">
                            Albums
                        </div>
                        <div class="panel__body">
                            <div class="table-responsive">
                                <table class="table table-hover">
                                    <thead>
                                        <th>Album Name</th>
                                        <th>Album Description</th>
                                        <th>Date Added</th>
                                        <th>Actions</th>
                                    </thead>
                                    <tbody>
                                        <% allAlbums.forEach( (album) => { %>
                                        <tr>
                                            <td><%= album.title %></td>
                                            <td><%= album.description %></td>
                                            <td><%= album.date_added %></td>
                                            <td>
                                                <a href="/admin/albums/<%= album.id %>" class="btn btn--black">Edit</a>
                                            </td>
                                        </tr>
                                        <% }); %>
                                    </tbody>
                                </table>
                            </div><!-- end .table-responsive -->
                        </div><!-- end .panel__body -->
                    </div><!-- end .panel -->
                </div><!-- end .col-lg-6 -->
                <div class="col-xs-12 col-md-6 col-lg-6">
                    <div class="panel">
                        <div class="panel__header">
                            Images
                        </div>
                        <div class="panel__body">
                            <div class="table-responsive">
                                <table class="table table-hover">
                                    <thead>
                                        <th>Image Name</th>
                                        <th>Image Description</th>
                                        <th>Album</th>
                                        <th>Actions</th>
                                    </thead>
                                    <tbody>
                                        <% 
                                        if (allImages.length > 0){
                                            allImages.forEach( (image) => { %>
                                            <tr>
                                                <td><%= image.title %></td>
                                                <td><%= image.description %></td>
                                                <td><%= image.album %></td>
                                                <td>
                                                    <a href="/admin/image/<%= image.id %>" class="btn btn--black">Edit</a>
                                                </td>
                                            </tr>
                                        <% }); 
                                        } else { %>
                                            <tr>
                                                <td class="text-center" colspan="4">No images found</td>
                                            </tr>
                                        <%
                                        }
                                        %>
                                    </tbody>
                                </table>
                            </div><!-- end .table-responsive -->
                        </div><!-- end .panel__body -->
                    </div><!-- end .panel -->
                </div><!-- end .col-lg-6 -->
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="panel">
                        <div class="panel__header">
                            Home Page Image
                        </div>
                        <div class="panel__body">
                            <p>
                                Current Image:
                            </p>
                            <img src="/img/img1.jpg" alt="Homepage image" class="img-thumbnail">
                            <p>
                                New Image:
                            </p>

                            <form action="">
                                <div class="form-group">
                                    <label for="homepage-image" class="form-label">Background Image</label>
                                    <input type="file" name="homepage-image" class="form-control-file" required="required">
                                </div>
                                <div class="form-group">
                                    <button class="btn btn--black">Update Background Image</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>    
<% include ./partials/footer  %>