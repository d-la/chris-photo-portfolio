<% include ./partials/header  %>
<% include ./partials/navigation %>
<% include ./partials/sidebar %>
    <main class="admin">
        <h1 class="page-title">Albums</h1>

        <div class="container-fluid">
            <div class="row">
                <div class="col-xs-12 col-md-6 col-lg-6">
                    <div class="panel">
                        <div class="panel__header">
                            Album List
                        </div>
                        <div class="panel__body">
                            <div class="table-responsive">
                                <table class="table table-hover">
                                    <thead>
                                        <th>Album Name</th>
                                        <th>Album Description</th>
                                        <th>Date Added</th>
                                        <th>Actions</th>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td>Test</td>
                                            <td>Test</td>
                                            <td>Test</td>
                                            <td>Test</td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div><!-- end .table-responsive -->
                        </div><!-- end .panel__body -->
                    </div><!-- end .panel -->
                </div><!-- end .col-lg-6 -->
                <div class="col-xs-12 col-md-6 col-lg-6">
                    <div class="panel">
                        <div class="panel__header">
                            Add new album
                        </div>
                        <div class="panel__body">
                            <form action="/contact" method="POST" enctype="multipart/form-data">
                                <div class="form-group">
                                    <label for="album[name]" class="form-label">Album Name</label>
                                    <input type="text" name="album[name]" class="form-control" required="required">
                                </div>
                                <div class="form-group">
                                    <label for="album[description]" class="form-label">Album Description</label>
                                    <textarea name="album[description]" class="form-control form-control--textarea" required="required"></textarea>
                                </div>
                                <div class="form-group">
                                    <label for="album[location]" class="form-label">Album Location</label>
                                    <input type="album[location]" name="album[location]" class="form-control" required="required">
                                </div>
                                <div class="form-group">
                                    <button class="btn btn--black">Submit</button>
                                </div>
                            </form>
                        </div><!-- end .panel__body -->
                    </div><!-- end .panel -->
                </div><!-- end .col-lg-6 -->
            </div>
        </div>
    </main>    
<% include ./partials/footer  %>