<% include partials/header  %>
<% include partials/navigation %>
    <main class="main">
        <section class="albums">
            <h1 class="albums__title">Album: <%= allImageData[0].album_title %></h1>
        </section>

        <section class="gallery-image">
            <img class="gallery-image__img gallery-image__img--height-auto" src="<%= allImageData[0].src %>" alt="Gallery Image Desc">
            <h1><%= allImageData[0].image_title %></h1>
            <p>
                <i class="fa fa-map-marker"></i>
                <%= allImageData[0].album_location %>
            </p>
            <p>Published: <%= allImageData[0].image_date_added %></p>
        </section>

        <section class="featured-images">
            <h3>Explore photos from other albums:</h3>

            <div class="flex flex--row flex--nowrap featured-images__container">
                <% 
                let count = 0;
                allImageData.forEach( (albumImage) => { 
                    
                    if ((count > 0) && (count < 6)){ %>
                    <a href="/gallery/<%= albumImage.image_id %>" class="featured-images__item featured-images__item--flex">
                        <img class="featured-images__img" src="<%= albumImage.src %>" alt="<%= albumImage.image_description %>" />
                    </a>
                <% 
                    }
                    count++;
                }); %>
            </div>
        </section>
    </main>

<% include partials/footer  %>